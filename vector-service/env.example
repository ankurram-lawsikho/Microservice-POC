# Vector Service Environment Configuration

# Server Configuration
PORT=3010
NODE_ENV=development

# Database Configuration (PostgreSQL with pgvector - Docker)
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=vector_db

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Service URLs
AUTH_SERVICE_URL=http://localhost:3007
USER_SERVICE_URL=http://localhost:3001
TODO_SERVICE_URL=http://localhost:3002
AI_SERVICE_URL=http://localhost:3008

# Vector Configuration
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.7
VECTOR_MAX_RESULTS=50

# Performance Configuration
MAX_CONCURRENT_EMBEDDINGS=5
EMBEDDING_CACHE_TTL=3600
SEARCH_CACHE_TTL=300

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
